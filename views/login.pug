extends includes/layout

block content
    div
      h1= title
      h4 Zadajte prihlasovacie meno a heslo.
    form(action="/login" method="post")
      div(class="form-group")
        label(for='username') Meno:
        input(id="username" type='text', placeholder='meno' name='username' class="input-lg")
      div(class="form-group")
        label(for='password') Heslo:
        input(id="password" type='password', placeholder='heslo' name='password' class="input-lg")
      div(class="form-group")
        button(type="submit" class="btn btn-default") Prihlásiť
