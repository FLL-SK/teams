doctype html
html
    include head
    style.
        .mainpnl {
            max-width: 600pt;
        }
        .header-card {
            margin-left: 5pt;
            margin-bottom: 5pt;
            max-width: 400pt;
            float: left;
        }
        .specmargin {
            margin-top:0;
            margin-bottom:0;
        }

    body

        div(class="mainpnl")
            div(class="container-fluid")
                div(class="header-card")
                    img(src="/images/FLL_Logo_web_white.jpg" alt="FLL SK" width="80pt")
                div(class="header-card")
                    h1(class="specmargin") FLL Slovensko o.z.
                    h4(class="specmargin") Mlynská dolina 41, 81102 Bratislava
                    a(href="mailto:registracia@fll.sk") registracia@fll.sk
                div(id="user" class="pull-right")
                    if user
                        a(href="/profile?id="+user.id) #{user.name}
                        ="  "
                        a(href="/logout") [odhlásiť]
                    else
                        p not-logged-in
            block content
