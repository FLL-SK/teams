extends includes/layout

block content
    include includes/header-sm
    h1 Stretnutie/turnaj
    h2 #{event.name}
    div(class="panel")
        h3 Dátum/čas začiatku
            = " "
            if event.startDate
                span= event.startDate.toLocaleString()
            else
                span "ešte nebol určený"
        h4
            if event.address
                if event.address.addrLine1
                    =", " + event.address.addrLine1
                if event.address.addrLine2
                    =", "+event.address.addrLine2
                if event.address.addrLine3
                    =", " + event.address.addrLine3
                h4 #{event.address.postCode}, #{event.address.city}

    if event.instructions
        div(class="panel panel-primary")
            div(class='panel-heading') Doplňujúce inštrukcie
            div(class='panel-body')
                p #{event.instructions}

    div(class="panel panel-primary")
        div(class='panel-heading') Prihlásené tímy
        div(class='panel-body')
            ul(id="allTeams" class="list-group")
                if event.teams && event.teams.length > 0
                    each t,idx in event.teams
                        a(class="list-group-item" href="/team?id="+t.id) #{idx+1}. #{t.name}
                else
                    li(class="list-group-item") Zatiľ žiadne
        div(class='panel-footer')
            if user.isAdmin || user.isEventManager
            div
                button(id='removeEvent' type='button' class='btn btn-default') Zruš turnaj
